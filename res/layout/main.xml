<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="true"
    >
    <TextView
    	android:id="@+id/title"
    	android:text="Pinch Views"
    	android:textColor="#fff"
    	android:textSize="18sp"
    	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="10dp"
    	/>
	<Button
		android:id="@+id/launchImage"
		android:text="Image View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/title"
		android:layout_centerHorizontal="true"
		/>
	<Button
		android:id="@+id/launchWeb"
		android:text="Web View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/launchImage"
		android:layout_centerHorizontal="true"
		/>
	<Button
		android:id="@+id/launchMap"
		android:text="Map View"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/launchWeb"
		android:layout_centerHorizontal="true"
		/>
</RelativeLayout>
